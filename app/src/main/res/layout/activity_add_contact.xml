<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/relative_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/text_view_cancel_add_contact"
        android:text="Hủy"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/text_view_cancel_new_contact"
        android:text="Liên hệ Mới"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/text_view_complete_add_contact"
        android:hint="Xong"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image_view_add_contact"
        android:padding="8dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/text_view_cancel_add_contact"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/assistance"
        android:background="@drawable/custom_add_image_contact"/>
    <EditText
        android:textSize="25dp"
        android:hint="Tên"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_name_add_contact"
        android:layout_toRightOf="@+id/image_view_add_contact"
        android:layout_below="@+id/text_view_cancel_add_contact"/>
    <EditText
        android:textSize="25dp"
        android:hint="Số điện thoại"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_number_add_contact"
        android:layout_toRightOf="@+id/image_view_add_contact"
        android:layout_below="@+id/edit_text_name_add_contact"/>
    <EditText
        android:textSize="25dp"
        android:hint="Địa chỉ"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_address_add_contact"
        android:layout_toRightOf="@+id/image_view_add_contact"
        android:layout_below="@+id/edit_text_number_add_contact"/>



</RelativeLayout>