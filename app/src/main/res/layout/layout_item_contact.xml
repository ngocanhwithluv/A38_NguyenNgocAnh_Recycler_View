<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:padding="7dp"
        android:scaleType="fitCenter"
        android:id="@+id/image_view_item_contact"
        android:layout_width="58dp"
        android:layout_height="58dp"/>
    <TextView
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/text_view_name_item"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Name"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/image_view_item_contact"/>

    <TextView
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:layout_below="@id/text_view_name_item"
        android:layout_marginLeft="10dp"
        android:id="@+id/text_view_number_item"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="SDT"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/image_view_item_contact"/>

    <TextView
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:layout_below="@id/text_view_name_item"
        android:layout_marginLeft="10dp"
        android:id="@+id/text_view_address_item"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="ADD"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/text_view_number_item"/>



</RelativeLayout>