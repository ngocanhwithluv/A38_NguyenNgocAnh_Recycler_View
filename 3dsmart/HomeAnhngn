package com.smarthome.main;

import android.content.Intent;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.ImageView;

import com.bkav.clients.ClientActivity;
import com.bkav.sync.interfaces.ApplicationService;
import com.smarthome.main.processthread.MusicAnhngn;

public class AnhngnActivity extends AppCompatActivity {


    @Override
    protected void onCreate(Bundle savedInstanceState) {

        super.onCreate(savedInstanceState);
        getWindow().getDecorView().setSystemUiVisibility(
                View.SYSTEM_UI_FLAG_LAYOUT_STABLE
                        | View.SYSTEM_UI_FLAG_LAYOUT_HIDE_NAVIGATION
                        | View.SYSTEM_UI_FLAG_LAYOUT_FULLSCREEN
                        | View.SYSTEM_UI_FLAG_HIDE_NAVIGATION
                        | View.SYSTEM_UI_FLAG_FULLSCREEN
                        | View.SYSTEM_UI_FLAG_IMMERSIVE_STICKY);
        setContentView(R.layout.activity_anhngn);

        AnhXa();

        homeIcon.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                ApplicationService.vibrateSoundService.vibrate();
                onBackPressed();
            }
        });
        profileIcon.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Intent intent = new Intent(AnhngnActivity.this , ProfileAnhngn.class);
                startActivity(intent);
            }
        });
        musicIcon.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Intent intent = new Intent(AnhngnActivity.this, MusicAnhngn.class);
                startActivity(intent);
            }
        });

        findingIcon.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                Intent intent = new Intent(AnhngnActivity.this, FinddingAnhngn.class);
                startActivity(intent);
            }
        });

    }
    private void AnhXa(){
        this.homeIcon = findViewById(R.id.homeIcon);
        this.findingIcon = findViewById(R.id.findingIcon);
        this.profileIcon = findViewById(R.id.profileIcon);
        this.musicIcon = findViewById(R.id.musicIcon);
    }
    private ImageView profileIcon;
    private ImageView musicIcon;
    private ImageView findingIcon;
    private ImageView homeIcon;
}
